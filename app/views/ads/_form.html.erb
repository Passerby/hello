<%= form_for @ad, :html => { :class => "form-horizontal ad" } do |f| %>

    <% if @ad.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @ad.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group hidden">
    <%= f.label :page, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :page, :class => 'form-control hidden', value: 'hp' %>
    </div>
    <%= error_span(@ad[:page]) %>
  </div>
  <div class="control-group">
    <label class="control-label">图片地址</label>
    <div class="controls">
      <%= f.text_field :img, :class => 'form-control' %>
    </div>
    <%= error_span(@ad[:img]) %>
  </div>
  <div class="control-group">
    <label class="control-label">链接地址</label>
    <div class="controls">
      <%= f.text_field :link, :class => 'form-control' %>
    </div>
    <%= error_span(@ad[:link]) %>
  </div>

  <br/>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            ads_path, :class => 'btn btn-default' %>

<% end %>
