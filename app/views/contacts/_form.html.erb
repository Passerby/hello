  </div>
  <div class="field">
    <%= f.text_field :title,class:'form-control input-lg',placeholder:'Title' %>
  </div>
  <div class="field">
      <%= f.text_area :content, class:'form-control input-lg',placeholder:'Content', rows:'6' %>
  </div>
  <div class="actions">
    <input style="width:150px" class="btn btn-primary btn-lg pull-right" type="submit" name="commit" value="<%= t('submit')%>">
  </div>
