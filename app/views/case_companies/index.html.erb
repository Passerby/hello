<%- model_class = CaseCompany -%>
<div class="page-header">
  <h1>其他案例</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>公司名</th>
      <th>Logo</th>
      <th>招聘需求</th>
      <th>产品使用</th>
      <th>招聘效果</th>
      <th>语言</th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th>创建时间</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @case_companies.each do |case_company| %>
      <tr>
        <td><%= link_to case_company.id, case_company_path(case_company) %></td>
        <td><%= case_company.name %></td>
        <td><img src="<%= case_company.img %>"></td>
        <td><%= case_company.requirement %></td>
        <td><%= case_company.usage %></td>
        <td><%= case_company.effect %></td>
        <td><%= case_company.lang %></td>
        <td><%= case_company.active %></td>
        <td><%=l case_company.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_case_company_path(case_company), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      case_company_path(case_company),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_case_company_path,
            :class => 'btn btn-primary' %>
