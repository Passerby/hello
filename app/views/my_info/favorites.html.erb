<%= render 'link_header' %>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('my_favorites')  %></h3>
  </div>
  <div class="panel-body">
  <table class="table table-striped">
    <tr>
      <th>职位</th>
      <th><%= t('application company') %></th>
      <th><%= t('salary') %></th>
      <th><%= t('city') %></th>
      <th></th>
      <th></th>
    </tr>
    <% @favorite_jobs.each do |f| %>
    <tr>
      <td><%= f.job.title %></td>
      <td><%= f.job.company.name %></td>
      <td><%= f.job.salary %></td>
      <td><%= f.job.city.name %></td>
      <td><%= link_to t('apply'), user_logined_path(job_id: f.job_id), remote: true %></td>
      <td><%= link_to delete_favorite_job_path(job_id: f.job_id), remote: true, method: :delete do %>
         <i class="fa fa-trash-o"></i>
        <% end %></td>
    </tr>
    <% end %>
  </table>
  </div>
</div>



<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-md">
    <div class="modal-content job-modal-content clearfix">
    </div>
  </div>
</div>