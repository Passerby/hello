<div class="page-header">
  <h1>城市</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>中文</th>
      <th>拼音</th>
      <th>所属省</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_setting_cities.each do |city| %>
      <tr>
        <td><%= city.id %></td>
        <td><%= city.name %></td>
        <td><%= city.en %></td>
        <td><%= city.province.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_setting_city_path(city), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_setting_city_path(city),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger hidden' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @admin_setting_cities %>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_setting_city_path,
            :class => 'btn btn-primary' %>
