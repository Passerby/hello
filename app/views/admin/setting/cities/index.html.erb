<div class="page-header">
  <h1>城市</h1>
</div>
<table class="table table-striped">
  <tbody>
    <% @admin_setting_cities.each do |city| %>
      <tr>
        <td><%= link_to city.id, admin_setting_city_path(city) %></td>
        <td><%= city.name %></td>
        <td><%= city.en %></td>
        <td><%= Admin::Setting::Province.find(city).name %></td>
        <td><%= city.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_setting_city_path(city), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_setting_city_path(city),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger hidden' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_setting_city_path,
            :class => 'btn btn-primary' %>
