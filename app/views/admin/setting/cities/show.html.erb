<%- model_class = Admin::Setting::City -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @admin_setting_city.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:en) %>:</strong></dt>
  <dd><%= @admin_setting_city.en %></dd>
  <dt><strong><%= model_class.human_attribute_name(:admin_setting_province_id) %>:</strong></dt>
  <dd><%= @admin_setting_city.admin_setting_province_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_setting_cities_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_setting_city_path(@admin_setting_city), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_setting_city_path(@admin_setting_city),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger hidden' %>
