<div class="page-header">
  <h1>学历</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>中文</th>
      <th>英文</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_setting_educations.each do |education| %>
      <tr>
        <td><%= link_to education.id, admin_setting_education_path(education) %></td>
        <td><%= education.name %></td>
        <td><%= education.en %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_setting_education_path(education), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_setting_education_path(education),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger hidden' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_setting_education_path,
            :class => 'btn btn-primary' %>
