<%= form_for @admin_setting_industry, :html => { :class => "form-horizontal industry" } do |f| %>

    <% if @admin_setting_industry.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@admin_setting_industry.errors.count, "error") %> prohibited this industry from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @admin_setting_industry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">中文</label>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_setting_industry[:name]) %>
  </div>
  <div class="control-group">
    <label class="control-label">英文</label>
    <div class="controls">
      <%= f.text_field :en, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_setting_industry[:en]) %>
  </div>
<br/>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            admin_setting_industries_path, :class => 'btn btn-default' %>

<% end %>
