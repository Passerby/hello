<%= form_for @case_user, :html => { :class => "form-horizontal case_user" } do |f| %>

    <% if @case_user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@case_user.errors.count, "error") %> prohibited this case_user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @case_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">姓名</label>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@case_user[:name]) %>
  </div>
  <div class="control-group">
    <label class="control-label">职位</label>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@case_user[:title]) %>
  </div>
  <div class="control-group">
    <label class="control-label">公司</label>
    <div class="controls">
      <%= f.text_field :company, :class => 'form-control' %>
    </div>
    <%= error_span(@case_user[:company]) %>
  </div>
  <div class="control-group">
    <label class="control-label">照片</label>
    <div class="controls">
      <%= f.text_field :img, :class => 'form-control' %>
    </div>
    <%= error_span(@case_user[:img]) %>
  </div>
  <div class="control-group">
    <label class="control-label">内容</label>
    <div class="controls">
      <%= f.text_area :content, :class => 'form-control' %>
    </div>
    <%= error_span(@case_user[:content]) %>
  </div>
  <div class="control-group">
    <label class="control-label">语言</label>
    <div class="controls">
      <%= f.text_field :lang, :class => 'form-control' %>
    </div>
    <%= error_span(@case_user[:lang]) %>
  </div>
  <div class="control-group">

    <%= f.label :active, :class => 'control-label'  %>
    <div class="controls">
      <%= f.check_box :active %>
    </div>
    <%= error_span(@case_user[:active]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            case_users_path, :class => 'btn btn-default' %>

<% end %>
