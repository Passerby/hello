<p id="notice"><%= notice %></p>

<h1>Listing Case Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Company</th>
      <th>Img</th>
      <th>Content</th>
      <th>Lang</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @case_users.each do |case_user| %>
      <tr>
        <td><%= case_user.name %></td>
        <td><%= case_user.title %></td>
        <td><%= case_user.company %></td>
        <td><%= case_user.img %></td>
        <td><%= case_user.content %></td>
        <td><%= case_user.lang %></td>
        <td><%= case_user.active %></td>
        <td><%= link_to 'Show', case_user %></td>
        <td><%= link_to 'Edit', edit_case_user_path(case_user) %></td>
        <td><%= link_to 'Destroy', case_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

